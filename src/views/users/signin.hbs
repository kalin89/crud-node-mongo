<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Sign In
            </div>
            <img class="rounded-circle mx-auto d-block m-4 logo" src="https://res.cloudinary.com/fazt/image/upload/c_scale,w_300/v1552365080/faztweb/fazt_proto_01_logo_pokrzf.png">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" class="form-control" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="password" class="form-control" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">SingIn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>